<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/popup_heading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/popup_body"
        android:layout_marginStart="@dimen/thick_view_margins"
        android:layout_marginTop="@dimen/default_view_margins"
        android:layout_marginEnd="@dimen/default_view_margins"
        android:layout_marginBottom="@dimen/default_view_margins"
        android:text="@string/heading"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/popup_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/ic_close" />

    <RelativeLayout
        android:id="@+id/popup_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/popup_close_button">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/thick_view_margins">

            <TextView
                android:id="@+id/popup_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/body" />

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>