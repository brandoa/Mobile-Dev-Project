<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="10dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="50dp"
    app:cardElevation="10dp">

    <TextView
        android:layout_gravity="center_vertical"
        android:id="@+id/preference_name"
        android:layout_width="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.DropDownItem"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/preference_name"/>

    <LinearLayout
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            style="@style/Widget.AppCompat.ActionButton"
            android:id="@+id/preference_open_btn"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_open_in_new_black"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <ImageButton
            style="@style/Widget.AppCompat.ActionButton"
            android:id="@+id/preference_qr_gen_btn"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_qr_code_black"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <ImageButton
            style="@style/Widget.AppCompat.ActionButton"
            android:id="@+id/preference_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_preference_delete_24dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>