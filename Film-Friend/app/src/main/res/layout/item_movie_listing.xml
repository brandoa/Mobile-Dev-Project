<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="100dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/default_view_padding">

        <TextView
            android:id="@+id/movieListingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="12"
            android:text="@string/movie_name"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/movieListingRelease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/release"
            android:textAppearance="@android:style/TextAppearance.Material.Small" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/movieListingPoster"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:outlineAmbientShadowColor="@color/black"
        android:scaleType="fitEnd"
        android:scaleX="1"
        android:scaleY="1"
        app:layout_collapseMode="parallax" />

    <TextView
        android:id="@+id/listingDate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/default_view_margins"
        android:gravity="right"
        android:text="1/1/2021"
        android:textAppearance="@android:style/TextAppearance.Material.Small" />

</androidx.cardview.widget.CardView>